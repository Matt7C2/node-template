    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Start Debug",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
              "run-script",
              "debug"
            ],
            "restart": true,
            "console": "integratedTerminal",
            //"internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Start Prod",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
              "run-script",
              "prod"
            ],
            "restart": true,
            "console": "integratedTerminal",
            //"internalConsoleOptions": "neverOpen"
        }
    ]
}